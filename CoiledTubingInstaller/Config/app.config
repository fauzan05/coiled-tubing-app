<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <appSettings>
    <add key="ApplicationName" value="Coiled Tubing Operations App" />
    <add key="Version" value="1.0.0" />
    <add key="CompanyName" value="Your Company Name" />
    <add key="SupportEmail" value="support@yourcompany.com" />
    <add key="SupportPhone" value="+1-555-0123-4567" />
    <add key="WebsiteURL" value="https://www.yourcompany.com" />
    
    <!-- Logging Configuration -->
    <add key="LoggingEnabled" value="true" />
    <add key="LogLevel" value="Information" />
    <add key="LogPath" value="Logs\" />
    <add key="MaxLogFiles" value="10" />
    <add key="MaxLogSize" value="10MB" />
    
    <!-- Hardware Configuration -->
    <add key="DefaultConnectionType" value="Ethernet" />
    <add key="DefaultIPAddress" value="192.168.1.100" />
    <add key="DefaultPort" value="502" />
    <add key="ConnectionTimeout" value="5000" />
    
    <!-- UI Configuration -->
    <add key="DefaultTheme" value="Light" />
    <add key="DefaultLanguage" value="en-US" />
    <add key="ShowSplashScreen" value="true" />
    <add key="MinimizeToTray" value="false" />
    
    <!-- Data Configuration -->
    <add key="DataRetentionDays" value="30" />
    <add key="AutoBackup" value="true" />
    <add key="BackupInterval" value="24" />
    <add key="CompressionEnabled" value="true" />
    
    <!-- Update Configuration -->
    <add key="CheckForUpdates" value="true" />
    <add key="UpdateURL" value="https://updates.yourcompany.com/coiled-tubing-app" />
    <add key="UpdateCheckInterval" value="7" />
  </appSettings>
  
  <connectionStrings>
    <!-- Add database connection strings here if needed -->
  </connectionStrings>
  
  <system.diagnostics>
    <trace autoflush="true" indentsize="4">
      <listeners>
        <add name="fileListener" type="System.Diagnostics.TextWriterTraceListener" initializeData="Logs\trace.log" />
        <remove name="Default" />
      </listeners>
    </trace>
  </system.diagnostics>
</configuration>