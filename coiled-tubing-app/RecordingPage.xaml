<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="coiled_tubing_app.RecordingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:coiled_tubing_app"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Control Buttons -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" Spacing="10" Margin="0,0,0,20">
            <Button Name="ConnectDeviceButton" Content="Connect Device" Click="ConnectDeviceButton_Click" MinWidth="120" Padding="10,5"/>
            <Button Name="GeneralDataButton" Content="General Data" Click="GeneralDataButton_Click" MinWidth="120" Padding="10,5"/>
            <Button Name="IODeviceButton" Content="I/O Device" Click="IODeviceButton_Click" MinWidth="120" Padding="10,5"/>
            <Button Name="SetupButton" Content="Setup" Click="SetupButton_Click" MinWidth="120" Padding="10,5"/>
        </StackPanel>

        <!-- Main Display Area -->
        <Border Grid.Row="1" 
                BorderBrush="Gray" 
                BorderThickness="2" 
                CornerRadius="5" 
                Background="White" 
                Margin="0,0,0,20">
            <Grid>
                <TextBlock Text="Main Display Area" 
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Center" 
                          FontSize="18" 
                          Foreground="Gray"/>
            </Grid>
        </Border>

        <!-- Bottom Controls -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Left Side - Back Button -->
            <Button Grid.Column="0" 
                    Name="BackButton" 
                    Content="Back" 
                    Click="BackButton_Click" 
                    MinWidth="100" 
                    Padding="10,5" 
                    HorizontalAlignment="Left"/>

            <!-- Center - Recording Controls -->
            <StackPanel Grid.Column="1" 
                       Orientation="Horizontal" 
                       HorizontalAlignment="Center" 
                       Spacing="10">
                <Border BorderBrush="DarkBlue" 
                       BorderThickness="2" 
                       CornerRadius="5" 
                       Padding="15,10" 
                       Background="LightBlue">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <Button Name="RecordButton" 
                               Content="Record" 
                               Click="RecordButton_Click" 
                               MinWidth="80" 
                               Padding="8,5" 
                               Background="Red" 
                               Foreground="White"/>
                        <Button Name="StopRecordButton" 
                               Content="Stop Record" 
                               Click="StopRecordButton_Click" 
                               MinWidth="80" 
                               Padding="8,5" 
                               Background="DarkRed" 
                               Foreground="White"/>
                        <Button Name="RunButton" 
                               Content="Run" 
                               Click="RunButton_Click" 
                               MinWidth="80" 
                               Padding="8,5" 
                               Background="Green" 
                               Foreground="White"/>
                        <Button Name="StopRunButton" 
                               Content="Stop Run" 
                               Click="StopRunButton_Click" 
                               MinWidth="80" 
                               Padding="8,5" 
                               Background="DarkGreen" 
                               Foreground="White"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Right Side - Data Export Buttons -->
            <StackPanel Grid.Column="2" 
                       Orientation="Horizontal" 
                       HorizontalAlignment="Right" 
                       Spacing="10">
                <Button Name="ShowInTableButton" 
                       Content="Show in Table" 
                       Click="ShowInTableButton_Click" 
                       MinWidth="120" 
                       Padding="10,5"/>
                <Button Name="ExportToCSVButton" 
                       Content="Export to CSV" 
                       Click="ExportToCSVButton_Click" 
                       MinWidth="120" 
                       Padding="10,5"/>
                <Button Name="ExportToPDFButton" 
                       Content="Export to PDF" 
                       Click="ExportToPDFButton_Click" 
                       MinWidth="120" 
                       Padding="10,5"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
