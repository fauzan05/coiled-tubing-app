<Page
    x:Class="coiled_tubing_app.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:coiled_tubing_app"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:lvc="using:LiveChartsCore.SkiaSharpView.WinUI"
    mc:Ignorable="d">

    <ScrollViewer ZoomMode="Disabled" HorizontalScrollMode="Auto" VerticalScrollMode="Auto">
        <Grid Margin="20">
            <Grid.DataContext>
                <local:DashboardViewModel />
            </Grid.DataContext>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="350"/>
                <RowDefinition Height="350"/>
            </Grid.RowDefinitions>

            <!-- Dashboard Title -->
            <TextBlock Grid.Row="0" 
                      Text="Coiled Tubing Operations Dashboard" 
                      FontSize="32" 
                      FontWeight="Bold" 
                      Margin="0,0,0,30"
                      HorizontalAlignment="Center"
                      Foreground="White"/>

            <!-- First Row of Charts -->
            <Grid Grid.Row="1" Margin="0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Chart 1: Temperature Line Chart -->
                <Border Grid.Column="0" 
                       CornerRadius="12" 
                       Margin="5"
                       BorderBrush="#404040"
                       BorderThickness="1" >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="15,15,15,5">
                            <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE7A3;" FontSize="20" Foreground="#FF6B47" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="Temperature Monitoring" 
                                      FontSize="16" 
                                      FontWeight="SemiBold"
                                      Foreground="White"
                                      VerticalAlignment="Center"/>
                        </StackPanel>

                        <lvc:CartesianChart Grid.Row="1"
                                           Series="{Binding TemperatureLineSeries}"
                                           Margin="10,5,10,15"/>
                    </Grid>
                </Border>

                <!-- Chart 2: Pressure Column Chart -->
                <Border Grid.Column="1" 
                       CornerRadius="12" 
                       Margin="5"
                       BorderBrush="#404040"
                       BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="15,15,15,5">
                            <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE9D9;" FontSize="20" Foreground="#4FC3F7" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="Pressure Analysis" 
                                      FontSize="16" 
                                      FontWeight="SemiBold"
                                      Foreground="White"
                                      VerticalAlignment="Center"/>
                        </StackPanel>

                        <lvc:CartesianChart Grid.Row="1"
                                           Series="{Binding PressureColumnSeries}"
                                           Margin="10,5,10,15"/>
                    </Grid>
                </Border>

                <!-- Chart 3: Well Status Pie Chart -->
                <Border Grid.Column="2" 
                       CornerRadius="12" 
                       Margin="5"
                       BorderBrush="#404040"
                       BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="15,15,15,5">
                            <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE9E2;" FontSize="20" Foreground="#81C784" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="Well Status Overview" 
                                      FontSize="16" 
                                      FontWeight="SemiBold"
                                      Foreground="White"
                                      VerticalAlignment="Center"/>
                        </StackPanel>

                        <lvc:PieChart Grid.Row="1"
                                     Series="{Binding WellStatusPieSeries}"
                                     Margin="10,5,10,15"/>
                    </Grid>
                </Border>
            </Grid>

            <!-- Second Row of Charts -->
            <Grid Grid.Row="2" Margin="0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Chart 4: Flow Rate Area Chart -->
                <Border Grid.Column="0" 
                       CornerRadius="12" 
                       Margin="5"
                       BorderBrush="#404040"
                       BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="15,15,15,5">
                            <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE81C;" FontSize="20" Foreground="#BA68C8" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="Flow Rate Trends" 
                                      FontSize="16" 
                                      FontWeight="SemiBold"
                                      Foreground="White"
                                      VerticalAlignment="Center"/>
                        </StackPanel>

                        <lvc:CartesianChart Grid.Row="1"
                                           Series="{Binding FlowRateAreaSeries}"
                                           Margin="10,5,10,15"/>
                    </Grid>
                </Border>

                <!-- Chart 5: Equipment Status Scatter Chart -->
                <Border Grid.Column="1" 
                       CornerRadius="12" 
                       Margin="5"
                       BorderBrush="#404040"
                       BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="15,15,15,5">
                            <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE90F;" FontSize="20" Foreground="OrangeRed" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="Equipment Efficiency" 
                                      FontSize="16" 
                                      FontWeight="SemiBold"
                                      Foreground="White"
                                      VerticalAlignment="Center"/>
                        </StackPanel>

                        <lvc:CartesianChart Grid.Row="1"
                                           Series="{Binding EquipmentScatterSeries}"
                                           Margin="10,5,10,15"/>
                    </Grid>
                </Border>

                <!-- Chart 6: Depth vs Time Line Chart -->
                <Border Grid.Column="2" 
                       CornerRadius="12" 
                       Margin="5"
                       BorderBrush="#404040"
                       BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="15,15,15,5">
                            <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE96E;" FontSize="20" Foreground="#FFB74D" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="Drilling Progress" 
                                      FontSize="16" 
                                      FontWeight="SemiBold"
                                      Foreground="White"
                                      VerticalAlignment="Center"/>
                        </StackPanel>

                        <lvc:CartesianChart Grid.Row="1"
                                           Series="{Binding DepthTimeSeries}"
                                           Margin="10,5,10,15"/>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>