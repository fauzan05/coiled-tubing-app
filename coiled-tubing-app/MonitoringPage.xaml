<Page
    x:Class="coiled_tubing_app.MonitoringPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:coiled_tubing_app"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="Record Management" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Margin="0,0,0,5"/>
                <TextBlock x:Name="StatusTextBlock" 
                           Text="Ready" 
                           FontSize="14" 
                           Foreground="Green"/>
            </StackPanel>
        </Grid>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    Spacing="15" 
                    Margin="0,0,0,20">
            
            <Button x:Name="AddRecordButton"
                    Style="{StaticResource AccentButtonStyle}"
                    Padding="20,10"
                    Click="AddRecordButton_Click">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE710;" FontSize="14"/>
                    <TextBlock Text="Add Record"/>
                </StackPanel>
            </Button>

            <Button x:Name="LoadRecordButton"
                    Padding="20,10"
                    Click="LoadRecordButton_Click">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE8E5;" FontSize="14"/>
                    <TextBlock Text="Load Record"/>
                </StackPanel>
            </Button>
            
            <Button x:Name="RefreshHistoryButton"
                    Padding="20,10"
                    Click="RefreshHistoryButton_Click">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE72C;" FontSize="14"/>
                    <TextBlock Text="Refresh"/>
                </StackPanel>
            </Button>
                    
            <Button x:Name="ClearHistoryButton"
                    Padding="20,10"
                    Background="OrangeRed"
                    Foreground="White"
                    Click="ClearHistoryButton_Click">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE74D;" FontSize="14"/>
                    <TextBlock Text="Clear All"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <!-- Main Content Area -->
        <Grid Grid.Row="2">
            <!-- History Table View -->
            <Border CornerRadius="8" 
                    BorderBrush="LightGray" 
                    BorderThickness="1">
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Table Header -->
                    <Border Grid.Row="0" 
                            CornerRadius="8,8,0,0" 
                            Padding="15,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="180"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="No" FontWeight="SemiBold"/>
                            <TextBlock Grid.Column="1" Text="Record Name" FontWeight="SemiBold"/>
                            <TextBlock Grid.Column="2" Text="Date Created" FontWeight="SemiBold"/>
                            <TextBlock Grid.Column="3" Text="Action" FontWeight="SemiBold"/>
                        </Grid>
                    </Border>

                    <!-- Table Content -->
                    <ListView x:Name="HistoryDataGrid"
                              Grid.Row="1"
                              SelectionMode="Single"
                              BorderThickness="0"
                              IsItemClickEnabled="True"
                              ItemClick="OpenRecordingPage">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#E0E0E0" 
                                        BorderThickness="0,0,0,1" 
                                        Padding="15,12"
                                        Background="Transparent">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="180"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" 
                                                   Text="{Binding RowNumber}" 
                                                   VerticalAlignment="Center"
                                                   FontWeight="SemiBold"
                                                   Foreground="Gray"/>

                                        <TextBlock Grid.Column="1" 
                                                   Text="{Binding RecordName}" 
                                                   VerticalAlignment="Center"
                                                   FontWeight="SemiBold"/>

                                        <TextBlock Grid.Column="2" 
                                                   Text="{Binding FormattedCreatedAt}" 
                                                   VerticalAlignment="Center"
                                                   FontSize="13"
                                                   Foreground="Gray"/>
                                        
                                        <StackPanel Grid.Column="3" Orientation="Horizontal" Spacing="5">
                                            <Button Background="Transparent"
                                                    BorderBrush="Green"
                                                    Foreground="Green"
                                                    FontSize="12"
                                                    Padding="8,4"
                                                    Tag="{Binding}"
                                                    Click="OpenInDirectoryButton_Click"
                                                    ToolTipService.ToolTip="Open file location">
                                                <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE8DA;" FontSize="14"/>
                                            </Button>
                                            
                                            <Button Background="Transparent"
                                                    BorderBrush="Blue"
                                                    Foreground="Blue"
                                                    FontSize="12"
                                                    Padding="8,4"
                                                    Tag="{Binding}"
                                                    Click="EditHistoryItem_Click"
                                                    ToolTipService.ToolTip="Rename this record">
                                                <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE70F;" FontSize="14"/>
                                            </Button>
                                            
                                            <Button Background="Transparent"
                                                    BorderBrush="Red"
                                                    Foreground="Red"
                                                    FontSize="12"
                                                    Padding="8,4"
                                                    Tag="{Binding}"
                                                    Click="DeleteHistoryItem_Click"
                                                    ToolTipService.ToolTip="Delete this record">
                                                <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE74D;" FontSize="14"/>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3" 
                CornerRadius="4" 
                Padding="15,8" 
                Margin="0,20,0,0"
                BorderBrush="LightGray"
                BorderThickness="1">
            <TextBlock x:Name="HistoryStatusTextBlock"
                       Text="No files in history"
                       FontSize="12"
                       Foreground="Gray"
                       FontWeight="SemiBold"/>
        </Border>
    </Grid>
</Page>