<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="coiled_tubing_app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Coiled Tubing App">

    <Grid>
        <!-- Professional Background -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#1e3a8a" Offset="0"/>
                <GradientStop Color="#1e40af" Offset="0.5"/>
                <GradientStop Color="#1d4ed8" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Subtle Grid Pattern -->
        <Rectangle Opacity="0.03">
            <Rectangle.Fill>
                <ImageBrush ImageSource="data:image/svg+xml;base64," 
                          Stretch="UniformToFill" />
            </Rectangle.Fill>
        </Rectangle>

        <!-- centering Button Login -->
        <Button Content="Login" HorizontalAlignment="Center" Click="OpenLoginWindow" />

        <!-- Subtle Corner Accent -->
        <Border HorizontalAlignment="Left" VerticalAlignment="Top" 
                Width="200" Height="200" 
                CornerRadius="0,0,100,0" 
                Opacity="0.05">
            <Border.Background>
                <SolidColorBrush Color="White"/>
            </Border.Background>
        </Border>

        <Border HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                Width="180" Height="180" 
                CornerRadius="90,0,0,0" 
                Opacity="0.05">
            <Border.Background>
                <SolidColorBrush Color="White"/>
            </Border.Background>
        </Border>
    </Grid>
</Window>