<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="coiled_tubing_app.SensorPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:coiled_tubing_app"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <!-- Main Content Area -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Grid.Row="0" 
                       Text="Chart Record Management" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       Margin="0,0,0,20"/>

            <!-- Buttons -->
            <StackPanel Grid.Row="1" 
                        Orientation="Horizontal" 
                        Spacing="15" 
                        Margin="0,0,0,30">
                
                <Button x:Name="AddRecordButton"
                        Content="Add Record"
                        Style="{StaticResource AccentButtonStyle}"
                        Padding="20,10"
                        Click="AddRecordButton_Click"/>

                <Button x:Name="LoadRecordButton"
                        Content="Load Record"
                        Padding="20,10"
                        Click="LoadRecordButton_Click"/>
                
                <Button x:Name="RefreshHistoryButton"
                        Content="Refresh History"
                        Padding="20,10"
                        Click="RefreshHistoryButton_Click"/>
            </StackPanel>

            <!-- Content Area -->
            <Border Grid.Row="2" 
                    CornerRadius="8" 
                    BorderBrush="LightGray" 
                    BorderThickness="1" 
                    Padding="20">
                
                <StackPanel x:Name="ContentPanel">
                    <TextBlock Text="Welcome to Chart Record Management" 
                               FontSize="20" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,15"/>
                    
                    <TextBlock Text="You can:" 
                               FontSize="16" 
                               Margin="0,0,0,10"/>
                    
                    <TextBlock Text="• Create new chart records" 
                               FontSize="14" 
                               Margin="20,5,0,5"/>
                    <TextBlock Text="• Save records in .fxz format" 
                               FontSize="14" 
                               Margin="20,0,0,5"/>
                    <TextBlock Text="• Load existing records" 
                               FontSize="14" 
                               Margin="20,0,0,5"/>
                    <TextBlock Text="• View file history and manage files" 
                               FontSize="14" 
                               Margin="20,0,0,5"/>

                    <TextBlock x:Name="StatusTextBlock" 
                               Text="Ready" 
                               FontSize="14" 
                               Foreground="Green" 
                               Margin="0,20,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- File History Panel -->
        <Border Grid.Column="2" 
                CornerRadius="8" 
                BorderBrush="LightGray" 
                BorderThickness="1" 
                Padding="15">
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="File History" 
                           FontSize="18" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,15"/>

                <StackPanel Grid.Row="1" 
                            Orientation="Horizontal" 
                            Spacing="10" 
                            Margin="0,0,0,15">
                    <Button x:Name="ClearHistoryButton"
                            Content="Clear All"
                            FontSize="12"
                            Padding="12,6"
                            Click="ClearHistoryButton_Click"/>
                    <Button x:Name="OpenDirectoryButton"
                            Content="Open Directory"
                            FontSize="12"
                            Padding="12,6"
                            Click="OpenDirectoryButton_Click"
                            IsEnabled="False"/>
                </StackPanel>

                <ScrollViewer Grid.Row="2" 
                              ZoomMode="Disabled"
                              HorizontalScrollMode="Disabled"
                              VerticalScrollBarVisibility="Auto">
                    <ListView x:Name="FileHistoryListView"
                              SelectionMode="Single"
                              SelectionChanged="FileHistoryListView_SelectionChanged">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,5,0,5">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0"
                                               Text="{Binding RecordName}"
                                               FontWeight="SemiBold"
                                               FontSize="13"
                                               Margin="0,0,0,2"/>

                                    <TextBlock Grid.Row="1"
                                               Text="{Binding HistoryType}"
                                               FontSize="11"
                                               Foreground="Gray"
                                               Margin="0,0,0,2"/>

                                    <TextBlock Grid.Row="2"
                                               Text="{Binding LastAccessed}"
                                               FontSize="10"
                                               Foreground="DarkGray"
                                               Margin="0,0,0,2"/>

                                    <Button Grid.Row="3"
                                            Content="Remove"
                                            FontSize="10"
                                            Padding="8,4"
                                            Margin="0,5,0,0"
                                            Tag="{Binding}"
                                            Click="RemoveHistoryItem_Click"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </ScrollViewer>

                <TextBlock Grid.Row="3"
                           x:Name="HistoryStatusTextBlock"
                           Text="No files in history"
                           FontSize="12"
                           Foreground="Gray"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0"/>
            </Grid>
        </Border>
    </Grid>
</Page>
